#include <iostream>
#include <vector>
using namespace std;

int main()
{
    vector<int> v = {5, 3, 10, 15, 7, 9};
    bool isswapped;
    int temp;

    for (int i = 0; i < v.size() - 1; i++) { // Loop n
        isswapped = false;
        for (int j = 0; j < v.size() - 1 - i; j++) { //Loop n-1
            cout << "Items Compared: " << v[j] << " " << v[j + 1] << endl;
            if (v[j] > v[j + 1]) {
                temp = v[j];
                v[j] = v[j + 1];
                v[j + 1] = temp;
                isswapped = true;
                cout << "Swapped: " << v[j] << " " << v[j + 1] << endl;
            } // constant
        }
        if (!isswapped) break;
    }
    cout << "\n Bubble Sorted Array: ";
    for (int i = 0; i < v.size(); i++) {
        cout << v[i] << " ";
    }
    cout << endl;

    return 0;
}


//Time complexity 
// => n*(n - 1)
// => n2 - n
// => O(n2 - n)
// => O(n2)

//Space Complexity (It's constant because use of vector/ list / array so, O(1) 

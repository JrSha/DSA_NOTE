#include <iostream>
#include <vector>
using namespace std;

int main()
{
    vector<int> v = {5, 3, 10, 15, 7, 9};
    bool isswapped;
    int temp;

    for (int i = 0; i < v.size() - 1; i++) {
        isswapped = false;
        for (int j = 0; j < v.size() - 1 - i; j++) {
            cout << "Items Compared: " << v[j] << " " << v[j + 1] << endl;
            if (v[j] > v[j + 1]) {
                temp = v[j];
                v[j] = v[j + 1];
                v[j + 1] = temp;
                isswapped = true;
                cout << "Swapped: " << v[j] << " " << v[j + 1] << endl;
            }
        }
        if (!isswapped) break;
    }
    cout << "\n Bubble Sorted Array: ";
    for (int i = 0; i < v.size(); i++) {
        cout << v[i] << " ";
    }
    cout << endl;

    return 0;
}
